@model Garage2._0.Models.ParkedVehicle

@{
    ViewData["Title"] = "Park";
}

    <h1 class="bg-primary border rounded-lg font-italic text-light p-2">Park Vehicle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<VehicleType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control"placeholder="Please enter registration number [AAA 999]"/>
                <span asp-validation-for="RegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control"placeholder="Please enter color" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control"placeholder="Please enter brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"placeholder="Please enter model" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Number of wheels </label>
                <input asp-for="NoOfWheels" class="form-control"placeholder="Please enter number of wheels" />
                <span asp-validation-for="NoOfWheels" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

